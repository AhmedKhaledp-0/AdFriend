{
  "manifest_version": 3,
  "name": "Ad Replacer",
  "author": "",
  "version": "1.0",
  "description": "Replaces ads with simple div elements",
  "permissions": ["scripting", "activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png"
  }
}
